generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // Profile section
  firstName         String
  lastName          String
  email             String   @unique
  username          String   @unique
  password          String
  phoneNumber       String?
  
  // Shipping section
  shippingFirstName String?
  shippingLastName  String?
  shippingPhone     String?
  address           String?
  city              String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  username    String   @unique
  phoneNumber String?
  password    String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
